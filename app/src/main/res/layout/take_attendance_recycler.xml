<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:id="@+id/take_sa_no"
        android:layout_alignParentStart="true"
        android:layout_width="40dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_height="match_parent"
        android:text="12"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="131701013"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/take_sa_no"
        android:id="@+id/take_stu_roll"/>
    <TextView
        android:layout_toRightOf="@+id/take_stu_roll"
        android:layout_marginLeft="8dp"
        android:id="@+id/take_stu_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/take_checkbox"
        android:text="Name of student"/>
    <CheckBox
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/take_checkbox"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:gravity="center"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>